@page "/Error"
@using WebDashboard.Services
@inject GlobalExceptionHandlerService ExceptionHandler
@inject ILogger<Error> Logger
@inject NavigationManager Navigation

<PageTitle>Error - POS Dashboard</PageTitle>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            @if (errorInfo != null)
            {
                <div class="card border-@GetBorderClass(errorInfo.Severity)">
                    <div class="card-header bg-@GetHeaderClass(errorInfo.Severity) text-white">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-@GetIconClass(errorInfo.Severity) me-2"></i>
                            @errorInfo.Title
                        </h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@errorInfo.Message</p>
                        
                        @if (!string.IsNullOrEmpty(errorInfo.DetailedMessage))
                        {
                            <div class="accordion mt-3" id="errorDetails">
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="detailsHeading">
                                        <button class="accordion-button collapsed" type="button" 
                                                data-bs-toggle="collapse" data-bs-target="#detailsCollapse">
                                            Technical Details
                                        </button>
                                    </h2>
                                    <div id="detailsCollapse" class="accordion-collapse collapse" 
                                         data-bs-parent="#errorDetails">
                                        <div class="accordion-body">
                                            <pre class="small text-muted">@errorInfo.DetailedMessage</pre>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        @if (errorInfo.RecoveryResult?.Success == true)
                        {
                            <div class="alert alert-success mt-3">
                                <i class="fas fa-check-circle me-2"></i>
                                <strong>Issue Resolved Automatically</strong>
                                <p class="mb-1 mt-2">@errorInfo.RecoveryResult.Message</p>
                                @if (errorInfo.RecoveryResult.ActionsPerformed.Any())
                                {
                                    <small class="text-muted">
                                        Recovery completed in @errorInfo.RecoveryResult.RecoveryDuration.TotalSeconds.ToString("F1") seconds
                                    </small>
                                }
                            </div>
                        }
                        else if (errorInfo.RecoveryAction != null && !errorInfo.RecoveryAction.IsAutomatic)
                        {
                            <div class="card mt-3 border-info">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-lightbulb me-2"></i>
                                        What you can try:
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">@errorInfo.RecoveryAction.Description</p>
                                    @if (errorInfo.RecoveryAction.Steps.Any())
                                    {
                                        <ol class="mb-0">
                                            @foreach (var step in errorInfo.RecoveryAction.Steps)
                                            {
                                                <li>@step</li>
                                            }
                                        </ol>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                Error Code: <code>@errorInfo.ErrorCode</code> | 
                                Time: @errorInfo.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")
                            </small>
                            <div>
                                <a href="/" class="btn btn-primary me-2">
                                    <i class="fas fa-home me-1"></i>
                                    Go Home
                                </a>
                                <button type="button" class="btn btn-outline-secondary me-2" @onclick="RefreshPage">
                                    <i class="fas fa-refresh me-1"></i>
                                    Try Again
                                </button>
                                <button type="button" class="btn btn-outline-info" @onclick="ReportError">
                                    <i class="fas fa-bug me-1"></i>
                                    Report Issue
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Fallback error display -->
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Something Went Wrong
                        </h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            We encountered an unexpected error while processing your request. 
                            This issue has been logged and our team will investigate.
                        </p>
                        <div class="mt-3">
                            <h6>What you can do:</h6>
                            <ul>
                                <li>Try refreshing the page</li>
                                <li>Go back to the home page</li>
                                <li>Contact support if the problem persists</li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">Time: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
                            <div>
                                <a href="/" class="btn btn-primary me-2">
                                    <i class="fas fa-home me-1"></i>
                                    Go Home
                                </a>
                                <button type="button" class="btn btn-outline-secondary" @onclick="RefreshPage">
                                    <i class="fas fa-refresh me-1"></i>
                                    Refresh
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private WebErrorInfo? errorInfo;

    protected override async Task OnInitializedAsync()
    {
        // In a real implementation, you might get error details from query parameters
        // or from a service that stores the last error
        // For now, we'll show a generic error
        await Task.CompletedTask;
    }

    private string GetBorderClass(WebErrorSeverity severity)
    {
        return severity switch
        {
            WebErrorSeverity.Low => "info",
            WebErrorSeverity.Medium => "warning",
            WebErrorSeverity.High => "danger",
            WebErrorSeverity.Critical => "danger",
            _ => "warning"
        };
    }

    private string GetHeaderClass(WebErrorSeverity severity)
    {
        return severity switch
        {
            WebErrorSeverity.Low => "info",
            WebErrorSeverity.Medium => "warning",
            WebErrorSeverity.High => "danger",
            WebErrorSeverity.Critical => "danger",
            _ => "warning"
        };
    }

    private string GetIconClass(WebErrorSeverity severity)
    {
        return severity switch
        {
            WebErrorSeverity.Low => "info-circle",
            WebErrorSeverity.Medium => "exclamation-triangle",
            WebErrorSeverity.High => "exclamation-circle",
            WebErrorSeverity.Critical => "times-circle",
            _ => "exclamation-triangle"
        };
    }

    private void RefreshPage()
    {
        // Refresh the current page
        Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
    }

    private void ReportError()
    {
        // In a real implementation, this would open a support ticket or send error details
        Logger.LogInformation("User requested to report error from error page");
        
        // For now, just show a simple alert (in a real app, you'd open a modal or navigate to a support form)
        // This would be implemented with JavaScript interop or a modal component
    }
}