<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mobile.ViewModels"
             x:Class="Mobile.Views.DailySalesPage"
             x:DataType="vm:DailySalesViewModel"
             Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Date Navigation -->
        <Grid Grid.Row="0" Padding="15" BackgroundColor="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="◀"
                    Command="{Binding PreviousDayCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    WidthRequest="50" />

            <Label Grid.Column="1"
                   Text="{Binding SelectedDate, StringFormat='{0:dddd, MMMM dd, yyyy}'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Button Grid.Column="2"
                    Text="▶"
                    Command="{Binding NextDayCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    WidthRequest="50"
                    Margin="0,0,10,0" />

            <Button Grid.Column="3"
                    Text="Today"
                    Command="{Binding SelectTodayCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    WidthRequest="70" />
        </Grid>

        <!-- Summary -->
        <Grid Grid.Row="1" Padding="15" BackgroundColor="DarkGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="0" HorizontalOptions="Center">
                <Label Text="Total Sales"
                       FontSize="12"
                       TextColor="White"
                       HorizontalOptions="Center" />
                <Label Text="{Binding DailyTotal, StringFormat='${0:F2}'}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="LightGreen"
                       HorizontalOptions="Center" />
            </StackLayout>

            <StackLayout Grid.Column="1" HorizontalOptions="Center">
                <Label Text="Transactions"
                       FontSize="12"
                       TextColor="White"
                       HorizontalOptions="Center" />
                <Label Text="{Binding SalesCount}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="LightBlue"
                       HorizontalOptions="Center" />
            </StackLayout>
        </Grid>

        <!-- Sales List -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Sales}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding ViewSaleDetailsCommand}"
                        SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" BackgroundColor="White" Margin="0,2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding InvoiceNumber}"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="Black" />

                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding TotalAmount, StringFormat='${0:F2}'}"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="Green"
                               HorizontalOptions="End" />

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="{Binding CreatedAt, StringFormat='{0:HH:mm}'}"
                               FontSize="12"
                               TextColor="Gray" />

                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding PaymentMethod}"
                               FontSize="12"
                               TextColor="DarkBlue"
                               HorizontalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Empty State -->
        <StackLayout Grid.Row="2"
                     IsVisible="{Binding Sales.Count, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Label Text="No sales for this date"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2"
                          IsVisible="{Binding IsBusy}"
                          IsRunning="{Binding IsBusy}"
                          Color="DodgerBlue"
                          VerticalOptions="Center"
                          HorizontalOptions="Center" />

        <!-- Error Message -->
        <Label Grid.Row="2"
               Text="{Binding ErrorMessage}"
               TextColor="Red"
               FontSize="14"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               IsVisible="{Binding HasError}"
               Margin="20" />
    </Grid>
</ContentPage>