<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mobile.ViewModels"
             x:Class="Mobile.Views.SalePage"
             x:DataType="vm:SaleViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Modern Header with Gradient Background -->
        <Frame Grid.Row="0" 
               Style="{StaticResource HeaderCard}">
            <Grid Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Business Info Row -->
                <Grid Grid.Row="0" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackLayout Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalOptions="Center">
                        <Label Text="{Binding BusinessName}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />
                        
                        <BoxView BackgroundColor="White" 
                                 WidthRequest="4" 
                                 HeightRequest="4" 
                                 CornerRadius="2"
                                 VerticalOptions="Center"
                                 IsVisible="{Binding ShopName, Converter={StaticResource IsNotNullConverter}}" />
                        
                        <Label Text="{Binding ShopName}"
                               FontSize="14"
                               TextColor="White"
                               Opacity="0.8"
                               VerticalOptions="Center"
                               IsVisible="{Binding ShopName, Converter={StaticResource IsNotNullConverter}}" />
                    </StackLayout>
                    
                    <!-- Touch-Optimized Scan Button -->
                    <Button Grid.Column="1"
                            Text="ðŸ“· Scan"
                            Command="{Binding ScanBarcodeCommand}"
                            Style="{StaticResource TouchButton}"
                            BackgroundColor="White"
                            TextColor="{StaticResource Primary}"
                            FontSize="14"
                            FontAttributes="Bold"
                            WidthRequest="100"
                            HeightRequest="44" />
                </Grid>
                
                <!-- Invoice Number -->
                <Label Grid.Row="1"
                       Text="{Binding InvoiceNumber, StringFormat='Invoice: {0}'}"
                       FontSize="13"
                       TextColor="White"
                       Opacity="0.9"
                       Margin="0,8,0,0" />
                
                <!-- Quick Stats Row -->
                <Grid Grid.Row="2" Margin="0,12,0,0" ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <StackLayout Grid.Column="0" HorizontalOptions="Start">
                        <Label Text="{Binding SaleItems.Count}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Start" />
                        <Label Text="Items"
                               FontSize="11"
                               TextColor="White"
                               Opacity="0.8"
                               HorizontalOptions="Start" />
                    </StackLayout>
                    
                    <StackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="{Binding TotalAmount, StringFormat='${0:F2}'}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        <Label Text="Total"
                               FontSize="11"
                               TextColor="White"
                               Opacity="0.8"
                               HorizontalOptions="Center" />
                    </StackLayout>
                    
                    <StackLayout Grid.Column="2" HorizontalOptions="End">
                        <Label Text="{Binding SelectedPaymentMethod}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="End" />
                        <Label Text="Payment"
                               FontSize="11"
                               TextColor="White"
                               Opacity="0.8"
                               HorizontalOptions="End" />
                    </StackLayout>
                </Grid>
            </Grid>
        </Frame>

        <!-- Sale Items List with Touch-Optimized Design -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsBusy}"
                     Command="{Binding RefreshCommand}"
                     Margin="0,10,0,0">
            <CollectionView ItemsSource="{Binding SaleItems}"
                            SelectionMode="None"
                            ItemSizingStrategy="MeasureAllItems">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                </CollectionView.ItemsLayout>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Modern Card Design for Sale Items -->
                        <Frame Style="{StaticResource ModernCard}"
                               Margin="16,0">
                            
                            <!-- Swipe Actions for Touch Interaction -->
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Remove"
                                                   BackgroundColor="{StaticResource ErrorRed}"
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SaleViewModel}}, Path=RemoveItemCommand}"
                                                   CommandParameter="{Binding .}" />
                                        <SwipeItem Text="Discount"
                                                   BackgroundColor="{StaticResource WarningOrange}"
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SaleViewModel}}, Path=ApplyDiscountCommand}"
                                                   CommandParameter="{Binding .}"
                                                   IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:SaleViewModel}}, Path=ShowBusinessTypeFeatures}" />
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                
                                <Grid Padding="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Product Name and Price -->
                                    <StackLayout Grid.Row="0" Grid.Column="0" Spacing="4">
                                        <Label Text="{Binding ProductName}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                        
                                        <Label Text="{Binding UnitPrice, StringFormat='${0:F2} each'}"
                                               FontSize="13"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                                    </StackLayout>

                                    <!-- Line Total -->
                                    <StackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="End" Spacing="2">
                                        <Label Text="{Binding LineTotal, StringFormat='${0:F2}'}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Primary}"
                                               HorizontalOptions="End" />
                                        
                                        <Label Text="{Binding DiscountAmount, StringFormat='-${0:F2}'}"
                                               FontSize="12"
                                               TextColor="Red"
                                               HorizontalOptions="End"
                                               IsVisible="{Binding DiscountAmount, Converter={StaticResource GreaterThanZeroConverter}}" />
                                    </StackLayout>

                                    <!-- Product Details Row -->
                                    <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                 Orientation="Horizontal" 
                                                 Spacing="12"
                                                 Margin="0,8,0,0">
                                        
                                        <Frame Style="{StaticResource CompactCard}"
                                               BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                                               IsVisible="{Binding BatchNumber, Converter={StaticResource IsNotNullConverter}}">
                                            <Label Text="{Binding BatchNumber, StringFormat='Batch: {0}'}"
                                                   FontSize="11"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
                                        </Frame>
                                        
                                        <Frame Style="{StaticResource CompactCard}"
                                               BackgroundColor="{StaticResource WarningOrange}"
                                               IsVisible="{Binding ExpiryDate, Converter={StaticResource IsNotNullConverter}}">
                                            <Label Text="{Binding ExpiryDate, StringFormat='Exp: {0:MM/dd/yyyy}'}"
                                                   FontSize="11"
                                                   TextColor="White" />
                                        </Frame>
                                        
                                        <Frame Style="{StaticResource CompactCard}"
                                               BackgroundColor="{StaticResource Primary}"
                                               IsVisible="{Binding IsWeightBased}">
                                            <Label Text="{Binding Weight, StringFormat='{0:F2} kg'}"
                                                   FontSize="11"
                                                   TextColor="White" />
                                        </Frame>
                                    </StackLayout>

                                    <!-- Touch-Optimized Quantity Controls -->
                                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                          Margin="0,12,0,0"
                                          ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Decrease Button -->
                                        <Button Grid.Column="0"
                                                Text="âˆ’"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SaleViewModel}}, Path=DecreaseQuantityCommand}"
                                                CommandParameter="{Binding .}"
                                                Style="{StaticResource CircularIconButton}"
                                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                                TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                                                FontSize="20"
                                                FontAttributes="Bold" />
                                        
                                        <!-- Quantity Display -->
                                        <Frame Grid.Column="1"
                                               Style="{StaticResource CompactCard}"
                                               BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                                            <Label Text="{Binding Quantity, StringFormat='Qty: {0}'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                                                   HorizontalOptions="Center" />
                                        </Frame>
                                        
                                        <!-- Increase Button -->
                                        <Button Grid.Column="2"
                                                Text="+"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SaleViewModel}}, Path=IncreaseQuantityCommand}"
                                                CommandParameter="{Binding .}"
                                                Style="{StaticResource CircularIconButton}"
                                                BackgroundColor="{StaticResource Primary}"
                                                TextColor="White"
                                                FontSize="20"
                                                FontAttributes="Bold" />
                                        
                                        <!-- Remove Button -->
                                        <Button Grid.Column="3"
                                                Text="ðŸ—‘"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SaleViewModel}}, Path=RemoveItemCommand}"
                                                CommandParameter="{Binding .}"
                                                Style="{StaticResource CircularIconButton}"
                                                BackgroundColor="{StaticResource ErrorRed}"
                                                TextColor="White"
                                                FontSize="16" />
                                    </Grid>
                                </Grid>
                            </SwipeView>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <!-- Empty State with Modern Design -->
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" 
                                 HorizontalOptions="Center"
                                 Spacing="20"
                                 Margin="40">
                        
                        <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                               WidthRequest="120"
                               HeightRequest="120"
                               CornerRadius="60"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Label Text="ðŸ›’"
                                   FontSize="60"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        
                        <Label Text="No items in your cart"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                               HorizontalOptions="Center" />
                        
                        <Label Text="Scan a barcode or add products to get started"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center" />
                        
                        <Button Text="ðŸ“· Scan Product"
                                Command="{Binding ScanBarcodeCommand}"
                                Style="{StaticResource PrimaryActionButton}"
                                WidthRequest="200"
                                Margin="0,10" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Bottom Action Panel with Modern Design -->
        <Frame Grid.Row="2" 
               Style="{StaticResource BottomSheet}">
            <Grid Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Payment Method Selection with Modern Design -->
                <Frame Grid.Row="0"
                       Style="{StaticResource CompactCard}"
                       BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                       Margin="0,0,0,16">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0"
                               Text="ðŸ’³"
                               FontSize="20"
                               VerticalOptions="Center" />
                        
                        <Picker Grid.Column="1"
                                ItemsSource="{Binding PaymentMethods}"
                                SelectedItem="{Binding SelectedPaymentMethod}"
                                Style="{StaticResource TouchPicker}" />
                    </Grid>
                </Frame>

                <!-- Calculation Breakdown with Modern Cards -->
                <StackLayout Grid.Row="1" Spacing="8" Margin="0,0,0,16">
                    
                    <!-- Subtotal -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0" 
                               Text="Subtotal" 
                               FontSize="16" 
                               TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
                        <Label Grid.Column="1" 
                               Text="{Binding Subtotal, StringFormat='${0:F2}'}" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                    </Grid>
                    
                    <!-- Discount (if applicable) -->
                    <Grid IsVisible="{Binding DiscountAmount, Converter={StaticResource GreaterThanZeroConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0" 
                               Text="Discount" 
                               FontSize="16" 
                               TextColor="Red" />
                        <Label Grid.Column="1" 
                               Text="{Binding DiscountAmount, StringFormat='-${0:F2}'}" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="Red" />
                    </Grid>
                    
                    <!-- Tax (if applicable) -->
                    <Grid IsVisible="{Binding TaxAmount, Converter={StaticResource GreaterThanZeroConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0" 
                               Text="Tax" 
                               FontSize="16" 
                               TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
                        <Label Grid.Column="1" 
                               Text="{Binding TaxAmount, StringFormat='${0:F2}'}" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                    </Grid>
                    
                    <!-- Divider -->
                    <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                             HeightRequest="1"
                             Margin="0,8" />
                </StackLayout>

                <!-- Total Amount with Emphasis -->
                <Frame Grid.Row="2"
                       Style="{StaticResource ModernCard}"
                       BackgroundColor="{StaticResource Primary}"
                       Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0"
                               Text="Total Amount"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />
                        
                        <Label Grid.Column="1"
                               Text="{Binding TotalAmount, StringFormat='${0:F2}'}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />
                    </Grid>
                </Frame>

                <!-- Action Buttons with Touch-Optimized Design -->
                <Grid Grid.Row="3" ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <!-- Clear Sale Button -->
                    <Button Grid.Column="0"
                            Text="Clear"
                            Command="{Binding ClearSaleCommand}"
                            Style="{StaticResource SecondaryActionButton}" />

                    <!-- Complete Sale Button -->
                    <Button Grid.Column="1"
                            Text="ðŸ’³ Complete Sale"
                            Command="{Binding CompleteSaleCommand}"
                            IsEnabled="{Binding CanCompleteSale}"
                            Style="{StaticResource PrimaryActionButton}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding CanCompleteSale}" Value="False">
                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}" />
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
            </Grid>
        </Frame>

        <!-- Loading Overlay with Modern Design -->
        <Frame Grid.Row="0" Grid.RowSpan="3"
               IsVisible="{Binding IsBusy}"
               BackgroundColor="Black"
               Opacity="0.7"
               CornerRadius="0"
               Padding="0">
            <StackLayout VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Spacing="20">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   Color="White"
                                   WidthRequest="50"
                                   HeightRequest="50" />
                <Label Text="Processing..."
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
            </StackLayout>
        </Frame>

        <!-- Error Message with Modern Design -->
        <Frame Grid.Row="1"
               IsVisible="{Binding HasError}"
               Style="{StaticResource ModernCard}"
               BackgroundColor="{StaticResource ErrorRed}"
               Margin="20"
               VerticalOptions="Start"
               HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal" Spacing="12">
                <Label Text="âš ï¸"
                       FontSize="20"
                       VerticalOptions="Center" />
                <Label Text="{Binding ErrorMessage}"
                       TextColor="White"
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>