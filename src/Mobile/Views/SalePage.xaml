<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mobile.ViewModels"
             x:Class="Mobile.Views.SalePage"
             x:DataType="vm:SaleViewModel"
             Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with Business/Shop Info and Invoice Number -->
        <Grid Grid.Row="0" BackgroundColor="DodgerBlue" Padding="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="10">
                <Label Text="{Binding BusinessName}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center" />
                
                <Label Text="•"
                       FontSize="14"
                       TextColor="LightGray"
                       VerticalOptions="Center"
                       IsVisible="{Binding ShopName, Converter={StaticResource IsNotNullConverter}}" />
                
                <Label Text="{Binding ShopName}"
                       FontSize="14"
                       TextColor="LightGray"
                       VerticalOptions="Center"
                       IsVisible="{Binding ShopName, Converter={StaticResource IsNotNullConverter}}" />
            </StackLayout>
            
            <Button Grid.Row="0" Grid.Column="1"
                    Text="Scan"
                    Command="{Binding ScanBarcodeCommand}"
                    BackgroundColor="White"
                    TextColor="DodgerBlue"
                    WidthRequest="80"
                    HeightRequest="35"
                    CornerRadius="17" />
            
            <Label Grid.Row="1" Grid.Column="0"
                   Text="{Binding InvoiceNumber, StringFormat='Invoice: {0}'}"
                   FontSize="14"
                   TextColor="LightGray"
                   VerticalOptions="Center" />
        </Grid>

        <!-- Sale Items List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding SaleItems}"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" BackgroundColor="White" Margin="0,2" RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Product Name -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding ProductName}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />

                        <!-- Quantity Controls -->
                        <Stepper Grid.Row="0" Grid.Column="1"
                                 Value="{Binding Quantity}"
                                 Minimum="0"
                                 Maximum="999"
                                 Increment="1"
                                 VerticalOptions="Center" />

                        <Label Grid.Row="0" Grid.Column="2"
                               Text="{Binding Quantity}"
                               FontSize="14"
                               VerticalOptions="Center"
                               Margin="5,0" />

                        <!-- Remove Button -->
                        <Button Grid.Row="0" Grid.Column="3"
                                Text="×"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SaleViewModel}}, Path=RemoveItemCommand}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="Red"
                                TextColor="White"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="20" />

                        <!-- Product Details -->
                        <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="15">
                            <Label Text="{Binding UnitPrice, StringFormat='${0:F2} each'}"
                                   FontSize="12"
                                   TextColor="Gray" />
                            
                            <Label Text="{Binding BatchNumber, StringFormat='Batch: {0}'}"
                                   FontSize="12"
                                   TextColor="Gray"
                                   IsVisible="{Binding BatchNumber, Converter={StaticResource IsNotNullConverter}}" />
                            
                            <Label Text="{Binding ExpiryDate, StringFormat='Exp: {0:MM/dd/yyyy}'}"
                                   FontSize="12"
                                   TextColor="Orange"
                                   IsVisible="{Binding ExpiryDate, Converter={StaticResource IsNotNullConverter}}" />
                            
                            <Label Text="{Binding Weight, StringFormat='{0:F2} kg'}"
                                   FontSize="12"
                                   TextColor="Blue"
                                   IsVisible="{Binding IsWeightBased}" />
                        </StackLayout>

                        <!-- Pricing Details -->
                        <StackLayout Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" HorizontalOptions="End">
                            <Label Text="{Binding LineTotal, StringFormat='${0:F2}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="Green"
                                   HorizontalOptions="End" />
                            
                            <Label Text="{Binding DiscountAmount, StringFormat='-${0:F2}'}"
                                   FontSize="12"
                                   TextColor="Red"
                                   HorizontalOptions="End"
                                   IsVisible="{Binding DiscountAmount, Converter={StaticResource GreaterThanZeroConverter}}" />
                        </StackLayout>

                        <!-- Discount Controls (if enabled) -->
                        <Button Grid.Row="2" Grid.Column="0"
                                Text="Apply Discount"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SaleViewModel}}, Path=ApplyDiscountCommand}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="Orange"
                                TextColor="White"
                                FontSize="12"
                                HeightRequest="30"
                                CornerRadius="15"
                                IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:SaleViewModel}}, Path=ShowBusinessTypeFeatures}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Empty State -->
        <StackLayout Grid.Row="1"
                     IsVisible="{Binding SaleItems.Count, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Label Text="No items in sale"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center" />
            <Button Text="Add Products"
                    Command="{Binding ScanBarcodeCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    Margin="0,10" />
        </StackLayout>

        <!-- Payment Method Selection -->
        <Grid Grid.Row="2" Padding="15" BackgroundColor="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0"
                   Text="Payment:"
                   FontSize="14"
                   VerticalOptions="Center"
                   Margin="0,0,10,0" />
            
            <Picker Grid.Column="1"
                    ItemsSource="{Binding PaymentMethods}"
                    SelectedItem="{Binding SelectedPaymentMethod}"
                    FontSize="14" />
        </Grid>

        <!-- Total and Actions -->
        <Grid Grid.Row="3" Padding="15" BackgroundColor="DarkGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Calculation Breakdown -->
            <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Spacing="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Column="0" Text="Subtotal:" FontSize="14" TextColor="White" />
                    <Label Grid.Column="1" Text="{Binding Subtotal, StringFormat='${0:F2}'}" FontSize="14" TextColor="White" />
                </Grid>
                
                <Grid IsVisible="{Binding DiscountAmount, Converter={StaticResource GreaterThanZeroConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Column="0" Text="Discount:" FontSize="14" TextColor="LightCoral" />
                    <Label Grid.Column="1" Text="{Binding DiscountAmount, StringFormat='-${0:F2}'}" FontSize="14" TextColor="LightCoral" />
                </Grid>
                
                <Grid IsVisible="{Binding TaxAmount, Converter={StaticResource GreaterThanZeroConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Column="0" Text="Tax:" FontSize="14" TextColor="LightGray" />
                    <Label Grid.Column="1" Text="{Binding TaxAmount, StringFormat='${0:F2}'}" FontSize="14" TextColor="LightGray" />
                </Grid>
            </StackLayout>

            <!-- Total Amount -->
            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="{Binding TotalAmount, StringFormat='Total: ${0:F2}'}"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10" />

            <!-- Action Buttons -->
            <Button Grid.Row="2" Grid.Column="0"
                    Text="Clear Sale"
                    Command="{Binding ClearSaleCommand}"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Margin="0,0,5,0" />

            <Button Grid.Row="2" Grid.Column="1"
                    Text="Complete Sale"
                    Command="{Binding CompleteSaleCommand}"
                    IsEnabled="{Binding CanCompleteSale}"
                    BackgroundColor="Green"
                    TextColor="White"
                    Margin="5,0,0,0" />
        </Grid>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                          IsVisible="{Binding IsBusy}"
                          IsRunning="{Binding IsBusy}"
                          Color="DodgerBlue"
                          VerticalOptions="Center"
                          HorizontalOptions="Center" />

        <!-- Error Message -->
        <Frame Grid.Row="1"
               IsVisible="{Binding HasError}"
               BackgroundColor="LightCoral"
               Padding="15"
               CornerRadius="5"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="20">
            <Label Text="{Binding ErrorMessage}"
                   TextColor="DarkRed"
                   FontSize="14"
                   HorizontalOptions="Center" />
        </Frame>
    </Grid>
</ContentPage>