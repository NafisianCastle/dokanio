<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mobile.ViewModels"
             x:Class="Mobile.MainPage"
             x:DataType="vm:MainViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">
            
            <!-- Header -->
            <Label Text="Offline POS Mobile"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1"
                   HorizontalOptions="Center" />

            <!-- Sync Status -->
            <Frame BackgroundColor="LightGray" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Sync Status"
                           FontSize="16"
                           FontAttributes="Bold" />

                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding IsOnline, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Online|Offline'}"
                           FontSize="14"
                           TextColor="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Green|Red'}" />

                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="{Binding SyncStatus}"
                           FontSize="12"
                           TextColor="DarkBlue" />

                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="{Binding LastSyncTime, StringFormat='Last sync: {0:MM/dd/yyyy HH:mm}'}"
                           FontSize="10"
                           TextColor="Gray"
                           IsVisible="{Binding LastSyncTime, Converter={StaticResource DateTimeToVisibilityConverter}}" />
                </Grid>
            </Frame>

            <!-- Quick Actions -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0"
                        Text="New Sale"
                        Command="{Binding NavigateToNewSaleCommand}"
                        BackgroundColor="Green"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="80"
                        Margin="0,0,5,5" />

                <Button Grid.Row="0" Grid.Column="1"
                        Text="Scan Barcode"
                        Command="{Binding NavigateToScannerCommand}"
                        BackgroundColor="DodgerBlue"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="80"
                        Margin="5,0,0,5" />

                <Button Grid.Row="1" Grid.Column="0"
                        Text="Products"
                        Command="{Binding NavigateToProductListCommand}"
                        BackgroundColor="Orange"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="80"
                        Margin="0,5,5,0" />

                <Button Grid.Row="1" Grid.Column="1"
                        Text="Daily Sales"
                        Command="{Binding NavigateToDailySalesCommand}"
                        BackgroundColor="Purple"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="80"
                        Margin="5,5,0,0" />
            </Grid>

            <!-- Manual Sync Button -->
            <Button Text="Manual Sync"
                    Command="{Binding ManualSyncCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    FontSize="14"
                    Margin="0,20,0,0" />

            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsBusy}"
                              IsRunning="{Binding IsBusy}"
                              Color="DodgerBlue" />

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="{Binding HasError}"
                   Margin="0,10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>