<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:Desktop.Converters"
             x:Class="Desktop.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme />
        
        <!-- Import Design System -->
        <StyleInclude Source="/Styles/DesignSystem.axaml"/>
        
        <!-- Legacy Compatibility Styles -->
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusSM}"/>
            <Setter Property="Padding" Value="{StaticResource ThicknessMD}"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        
        <Style Selector="Button.accent:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
        </Style>
        
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusSM}"/>
            <Setter Property="Padding" Value="{StaticResource ThicknessSM}"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        
        <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource ErrorDarkBrush}"/>
        </Style>
        
        <Style Selector="Border.listitem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusSM}"/>
            <Setter Property="Padding" Value="{StaticResource ThicknessSM}"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Border.listitem:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <!-- Converters -->
        <converters:ChangeAmountColorConverter x:Key="ChangeAmountColorConverter"/>
        <converters:MessageTypeToClassConverter x:Key="MessageTypeToClassConverter"/>
        <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Application.Resources>
</Application>