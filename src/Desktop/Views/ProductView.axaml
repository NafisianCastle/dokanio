<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Desktop.ViewModels"
             x:Class="Desktop.Views.ProductView"
             x:DataType="vm:ProductViewModel">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Product List and Expiring Products -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Search and Add -->
            <Border Grid.Row="0" Classes="card" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText}" 
                             Watermark="Search products..."
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="1" 
                            Content="Add Product" 
                            Command="{Binding AddNewProductCommand}"
                            Classes="accent"/>
                </Grid>
            </Border>
            
            <!-- Product List -->
            <Border Grid.Row="1" Classes="card" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Products" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding FilteredProducts}"
                              AutoGenerateColumns="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat='₹{0:N2}'}" Width="100"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="80"/>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <Button Content="Edit" 
                                                    Command="{Binding $parent[UserControl].((vm:ProductViewModel)DataContext).EditProductCommand}"
                                                    CommandParameter="{Binding}"
                                                    Classes="accent"
                                                    FontSize="12"
                                                    Padding="8,4"/>
                                            <Button Content="Delete" 
                                                    Command="{Binding $parent[UserControl].((vm:ProductViewModel)DataContext).DeleteProductCommand}"
                                                    CommandParameter="{Binding}"
                                                    Classes="danger"
                                                    FontSize="12"
                                                    Padding="8,4"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Expiring Products Alert -->
            <Border Grid.Row="2" Classes="card">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Expiring Products (Next 30 Days)" FontWeight="Bold" FontSize="14" Foreground="#FF9800" Margin="0,0,0,10"/>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding ExpiringProducts}"
                              AutoGenerateColumns="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Batch" Binding="{Binding BatchNumber}" Width="100"/>
                            <DataGridTextColumn Header="Expiry" Binding="{Binding ExpiryDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Right Panel - Product Form -->
        <Grid Grid.Column="1" IsVisible="{Binding IsAddingProduct}">
            <Border Classes="card">
                <ScrollViewer>
                    <StackPanel Spacing="15">
                        <TextBlock Text="Product Details" FontWeight="Bold" FontSize="16"/>
                        
                        <StackPanel>
                            <TextBlock Text="Product Name *" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ProductName}" Watermark="Enter product name"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Barcode" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Barcode}" Watermark="Enter barcode"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Category" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Category}" Watermark="Enter category"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Unit Price *" FontWeight="Bold" Margin="0,0,0,5"/>
                            <NumericUpDown Value="{Binding UnitPrice}" 
                                           Minimum="0.01" 
                                           Maximum="99999"
                                           Increment="0.01"
                                           FormatString="₹{0:N2}"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Batch Number" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding BatchNumber}" Watermark="Enter batch number"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Expiry Date" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding ExpiryDate}"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Stock Quantity" FontWeight="Bold" Margin="0,0,0,5"/>
                            <NumericUpDown Value="{Binding StockQuantity}" 
                                           Minimum="0" 
                                           Maximum="99999"
                                           Increment="1"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="10">
                            <Button Content="Save Product" 
                                    Command="{Binding SaveProductCommand}"
                                    IsEnabled="{Binding !IsBusy}"
                                    Classes="accent"
                                    HorizontalAlignment="Stretch"/>
                            
                            <Button Content="Cancel" 
                                    Command="{Binding CancelEditCommand}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                        
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="Red" 
                                   IsVisible="{Binding HasError}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Placeholder when not adding/editing -->
        <Grid Grid.Column="1" IsVisible="{Binding !IsAddingProduct}">
            <Border Classes="card">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Select a product to edit" 
                               FontSize="14" 
                               Opacity="0.7"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="or click 'Add Product' to create a new one" 
                               FontSize="12" 
                               Opacity="0.5"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>